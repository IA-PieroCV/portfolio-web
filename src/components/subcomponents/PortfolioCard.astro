---
const { title, description, image_url, technologies } = Astro.props;
---

<div
  class="parent_card flex flex-col md:flex-row rounded overflow-hidden shadow-lg bg-gray-800 hover:shadow-xl transition-shadow duration-300"
>
  <img
    class="w-full md:w-1/3 h-auto object-cover"
    src={image_url}
    alt={`Image for ${title}`}
  />
  <div class="p-4 text-gray-300">
    <div>
      <div class="font-bold text-xl mb-2 text-white">{title}</div>
      <p class="text-base">
        {description}
      </p>
    </div>
    <div class="py-2 flex-wrap">
      {
        technologies.map((tech: string) => (
          <span class="inline-block bg-blue-600 rounded-full px-3 py-1 text-sm font-semibold text-white mr-2 mb-2">
            {tech}
          </span>
        ))
      }
    </div>
    <a
      href="portfolio-link"
      class="duration-200 mt-4 inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"
    >
      View Project
    </a>
  </div>
</div>

<style>
  .parent_card {
    animation: reveal-jobs linear both;
    animation-timeline: view();
    animation-range: entry 20% cover 30%;
  }

  @keyframes reveal-jobs {
    from {
      opacity: 0%;
      transform: translateY(30px);
      scale: 1.1;
    }
    to {
      opacity: 100%;
      transform: translateY(0px);
      scale: 1;
    }
  }
</style>
