---
import PortfolioCard from "../subcomponents/PortfolioCard.astro";
import portfolios from "../../data/portfolios";
import type { Portfolio } from "../../interfaces/Portfolio";

const portfolio_list: Portfolio[] = portfolios;
---

<section class="bg-gray-900 p-10">
  <div class="max-w-6xl mx-auto">
    <h2 class="text-4xl font-bold text-white text-center mb-6">Portfolio Projects</h2>
    <div class="flex flex-col gap-10">
      {
        portfolio_list.map((portfolio) => (
          <PortfolioCard
            title={portfolio.name}
            description={portfolio.description}
            technologies={portfolio.technologies}
            image_url={portfolio.image_url}
          />
        ))
      }
    </div>
  </div>
</section>
